<% layout("/layouts/boilerplate") %>

<div class="checkout-background">
  <div class="order-page">
    <div class="order-page-content">
      <h4>Order Items</h4>
      <hr><br>

      <% for(let item of sendOrderItems.orderItems) { %>    
        <div style="margin-bottom: 20px;" class="order-item-card" data-id="<%= item.id %>">
          <div class="order-item-info">
            <h6 class="order-item-name"><%= item.Name %></h6>
          </div>
          <span style="font-weight: 700; margin-left: -70px;"> Quantity : <%= item.Quantity %></span>
          <div>
            <span class="item-cost">
              <span class="total-item-cost" style="font-weight: 700;">&#8377; <%= item.Price %></span>
            </span>
          </div>
        </div>
      <% } %>

      <br>
      <div style="font-weight: 700;">Table Number : <%= sendOrderItems.tableNumber %></div>
      <br>

      <h6>Bill Details</h6>

      <div class="item-total-and-price Bill" style="font-weight: 700;">
        <div class="item-total">Item Total</div>
        <div class="item-total-price" id="grand-total">&#8377; <%= sendOrderItems.itemTotal %></div>
      </div>

      <div class="item-total-and-price Bill" style="font-weight: 700;">
        <div class="item-total">Gst</div>
        <div class="item-total-price" id="grand-total">&#8377; <%= sendOrderItems.gstAmount %></div>
      </div>

      <div class="item-total-and-price Bill" style="font-weight: 700;">
        <div class="item-total">Delivery Charges</div>
        <div class="item-total-price" id="grand-total">&#8377; <%= sendOrderItems.deliveryCharges %></div>
      </div>

      <hr>

      <div class="grand-total Bill">
        <h6 class="grand-total-text">TO PAY</h6>
        <h6 class="grand-total-price" id="final-amount">&#8377; <%= sendOrderItems.finalAmount %></h6>
      </div>

      <hr>

      <div class="item-total-and-price Bill" style="font-weight: 700;">
        <div class="item-total">Delivery Partner Number</div>
        <div class="item-total-price" id="grand-total">+91 944XXXXXXX</div>
      </div>

      <div class="item-total-and-price Bill" style="font-weight: 700;">
        <div class="item-total">Resaturant Number </div>
        <div class="item-total-price" id="grand-total">+91 849XXXXXXX</div>
      </div>

      <br>
      

      <a href="/delivery">
        <div class="order-btn-div">
          <button class="btn order-btn">
            <span class="fire-emoji">ðŸ”¥</span>&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="order-btn-span" style="font-weight: 600;">Done</span>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <i class="fas fa-utensils utensils-icon" style="color: aliceblue;"></i>
          </button>
        </div>
      </a>

      <div id="delivery-map" style="height: 400px; width: 100%; margin-top: 40px;"></div>
    </div>
  </div>
</div>

