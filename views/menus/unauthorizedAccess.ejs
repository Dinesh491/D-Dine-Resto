<% layout("/layouts/boilerplate") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    Swal.fire({
        icon: 'warning',
        title: 'Restricted Access',
        text: 'This section is strictly for restaurant chefs only.',
        showCancelButton: true,
        confirmButtonText: 'Login as Chef',
        cancelButtonText: 'OK',
        customClass: {
            popup: 'custom-alert'
        },
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '/login'; // Replace with your actual chef login route
        } else {
            window.location.href = '/dineIn'; // Or wherever you want to redirect for regular users
        }
    });
</script>