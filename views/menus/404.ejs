<!-- views/404.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>404 - Not Found</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <script>
      Swal.fire({
        icon: 'error',
        title: '404 - Page Not Found',
        text: 'Oops! The page "<%= path %>" does not exist.',
        confirmButtonText: 'Go Home',
        customClass: {
                  popup: 'custom-alert'
              }
      }).then(() => {
        window.location.href = '/'; // redirect to homepage after OK
      });
    </script>
  </body>
</html>
