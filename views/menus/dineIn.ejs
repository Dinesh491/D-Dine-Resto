<script>
  document.addEventListener("DOMContentLoaded", () => {
    const excludePaths = [
      "/appetizers",
      "/beverages",
      "/mainCourse",
      "/desserts",
      "/mandi",
      "/checkOut",
      "/viewCart",
      "/dineInOrders",
      "/deliveryOrders"
    ];

    const currentPath = window.location.pathname;
    if (excludePaths.includes(currentPath)) return;

    const orderBarBtn = document.querySelector(".orderStatusBar-btn");
    if (!orderBarBtn) return;

    if (
      sessionStorage.getItem("showOrderBar") === "true" ||
      sessionStorage.getItem("barPhase") === "final"
    ) {
      orderBarBtn.classList.remove("hidden-bar");
  // Move the order bar up by 20px
  orderBarBtn.style.position = "fixed";
  orderBarBtn.style.bottom = "40px"; // adjust from default position
  orderBarBtn.style.transition = "bottom 0.3s ease"; // smooth transition
      
    }
  });
</script>

